        <link type="api">http://api.npr.org/transcript?id=129039415&amp;apiKey=MDA3MjY5MjE5MDEzMDE5MjY1NTczMzYzMA001</link>
      </transcript>
      <audio id="129039398" type="primary">
        <title/>
        <duration>637</duration>
        <description/>
        <format>
          <mp3 type="m3u">http://api.npr.org/m3u/1129039398-8b1fa4.m3u?orgId=1&amp;aggIds=5163715&amp;ft=3&amp;f=</mp3>
          <wm>http://www.npr.org/templates/dmg/dmg_wmref_em.php?id=129039398&amp;type=1&amp;mtype=WM&amp;orgId=1&amp;aggIds=5163715&amp;ft=3&amp;f=</wm>
          <rm>http://www.npr.org/templates/dmg/dmg_rpm.rpm?id=129039398&amp;type=1&amp;mtype=RM&amp;orgId=1&amp;aggIds=5163715&amp;ft=3&amp;f=</rm>
