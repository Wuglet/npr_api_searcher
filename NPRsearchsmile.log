      <audio id="130245799" type="standard">
        <title>'On The Last Night'</title>
        <duration>0</duration>
        <description>null</description>
        <format>
          <mp3 type="m3u">http://api.npr.org/m3u/1130245799-a9f1e7.m3u?orgId=1&amp;topicId=1144&amp;ft=3&amp;f=</mp3>
          <wm>http://www.npr.org/templates/dmg/dmg_wmref_em.php?staticUrl=/npr/me/2010/10/20101001_me_gatz3&amp;mtype=WM&amp;orgId=1&amp;topicId=1144&amp;ft=3&amp;f=</wm>
          <rm>http://www.npr.org/templates/dmg/dmg_rpm.rpm?staticUrl=/npr/me/2010/10/20101001_me_gatz3&amp;mtype=RM&amp;orgId=1&amp;topicId=1144&amp;ft=3&amp;f=</rm>
